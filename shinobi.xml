<?xml version="1.0"?>
<Container version="2">
  <Name>Shinobi</Name>
  <Repository>edchamberlain/shinobi:dev</Repository>
  <Registry>https://hub.docker.com/repository/docker/edchamberlain/shinobi</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/EdwardChamberlain/unraid-templates/issues</Support>
  <Project>https://gitlab.com/Shinobi-Systems/Shinobi</Project>
  <Overview>Shinobi built from source.</Overview>
  <Category>HomeAutomation: MediaApp:Video MediaServer:Video Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8080]/</WebUI>
  <TemplateURL/>
  <Icon>https://gitlab.com/uploads/-/system/project/avatar/6947723/mstile-150x150.png?width=64</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1637763850</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>Shinobi built from source.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>1441</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/Shinobi</HostDir>
      <ContainerDir>/opt/Shinobi/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/cctv/</HostDir>
      <ContainerDir>/opt/Shinobi/videos</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/dev/shm/streams</HostDir>
      <ContainerDir>/dev/shm/Shinobi/streams</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels/>
  <Config Name="Config" Target="/opt/Shinobi/config" Default="" Mode="rw" Description="Storage location for config files. " Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/Shinobi</Config>
  <Config Name="Videos" Target="/opt/Shinobi/videos" Default="" Mode="rw" Description="Storage location for footage." Type="Path" Display="always" Required="false" Mask="false">/mnt/user/cctv/</Config>
  <Config Name="WebGUI" Target="8080" Default="1441" Mode="tcp" Description="Container port 8080: WebGUI" Type="Port" Display="advanced" Required="false" Mask="false">1441</Config>
  <Config Name="Streams" Target="/dev/shm/Shinobi/streams" Default="" Mode="rw" Description="RAM location for streams [Must be RAM]" Type="Path" Display="advanced" Required="false" Mask="false">/dev/shm/streams</Config>
</Container>
